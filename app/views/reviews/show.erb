<main>
    <article>
        <section>
            <h2><%=@user_review.user.username%> - Store: '<%= @user_review.store.name %>'</h2>
            <h3>'<%=@user_review.title%>'</h3>
            <h3><%=@user_review.content%></h3>
        </section>
        <section>
            <h4><a href="/my-reviews/<%= @user_review.id %>/edit">Would you like to edit this review?</a></h4>
            <form action="/my-reviews/<%=@user_review.id %>" method="POST">
                <input id="hidden" type="hidden" name="_method" value="delete">
                <input type="submit" value="delete">
            </form>
        </section>
    </article>
</main>
