<DOCTYPE! html>
<html>
<head>
<title><%=@user_review.title%></title>
<link href="https://fonts.googleapis.com/css?family=Vollkorn&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/stylesheets/loggedin_banner.css">
<link rel="stylesheet" href="/stylesheets/reviews/individual_review.css">
</head>
<body>

<div class="container"></div>
<h1 id="intro"><a href="/home">Hole in the Wall</a>
<h3 id="allstores"><a href="/stores">Stores</a></h3>
<h3 class="allusers"><a href="/users">Users</a></h3>

<div class="dropdown">
    <button class="dropbtn">Profile</button>
    <div class="dropdown-content">
        <a href="/account">Account</a>
        <a href="/my-reviews">My Reviews</a>
        <a href="/my-stores">My Stores</a>
        <a href="/logout">Log out</a>
    </div>
</div>

<div class="reviewinfo">
    <h1>Review id: <%= @user_review.id %> - User id: <%=@user_review.user_id%> - Store: '<%= @user_review.store.name %>' - Created at: <%=@user_review.created_at%></h1>
    <h1><%=@user_review.title%></h1>
    <h3><%=@user_review.content%></h3>
</div>
<h3 id="href"><a href="/my-reviews/<%= @user_review.id %>/edit">Would you like to edit this review?</a></h3>


<form action="/my-reviews/<%=@user_review.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="delete">
<input type="submit" value="delete">
</form>
</body>
</html>

