<main>
    <article>
        <form action="/my-reviews/<%= @user_review.id %>" method="POST">
            <input type="hidden" name="_method" value="patch">
            <h2>New Title: </h2>
            <textarea rows="1" cols="50" placeholder="Title:" <input type="text" name="review[title]"><%=@user_review.title%></textarea>
            <h2>New Content: </h2>
            <textarea rows="4" cols="50" placeholder="Content:" <input type="text" name="review[content]"><%=@user_review.content%></textarea>
            <input type="submit" value="submit">
        </form>
    </article>
</main>


