<main id="home-main">
    <aside id="home-aside" role="region" aria-label="Sinatra">
        <iframe
              width="500" 
              height="500"
              rameborder="0" style="border:0"
              src="https://www.onlyinyourstate.com/florida/hole-in-the-wall-fl/" allowfullscreen>
        </iframe>
    </aside>
    <article id="home-article" role="feed" aria-label="Recent reviews feed featuring google maps">
        <%@home_feed_reviews.each do |review|%>
            <section id="home-grid-container">

                <div class="home-google-map">
                    <iframe
                        width="350"
                        height="250"
                        frameborder="0" style="border:0"
                        src="https://www.google.com/maps/embed/v1/place?key=<%=@api_key%>
                        &q=<%=review.store.name%>+<%=review.store.address%>" allowfullscreen>
                    </iframe>
                </div>

                <div class="home-user-info">
                <% if !review.user.nil? %>
                    <h2><a href="/stores/<%=review.store_id%>"><%=review.store.name%></a></h2>
                    <h3><a href="/users/<%=review.user.id%>"><%=review.user.username%></a>: <u><%= review.title %></u></h3>
                <% else %>
                    <h2><a href="/stores/<%=review.store_id%>"><%=review.store.name%></a></h2>
                    <h3>[deleted]: <u><%= review.title %></u></h3> 
                <% end %>
                    <p><%= review.content%></p>
                </div>

            </section>
        <%end%>
    </article>
</main>