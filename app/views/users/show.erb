<main>
    <article>
        <% if @current_user_page == true %>
            <section>
                <div>
                    <h2><%= current_user.username %></h2>
                    <h3><%= current_user.name %></h3>
                    <h3><%= current_user.email %></h3>
                </div>

                <div>
                    <h3>Number of reviews: <%=current_user.reviews.count%></h3>
                    <ol>
                        <% @reviews.each do |review| %>
                            <li><a href="/stores/<%=review.store.id%>"><%=review.store.name%></a>: <%=review.title%></li>
                        <% end %>
                    </ol>
                </div>

                <div>
                    <h4><a href="/user/edit">Edit Account</a></h4>
                    <h4><a href="/user/delete">Delete Account</a></h4>
                </div>
            </section>
        <% else %>
            <section>
                <div>
                    <h2><%= @user.username %></h2>
                    <h3><%= @user.name %></h3>
                    <h3><%= @user.email %></h3>
                </div>

                <div>
                    <h3>Number of reviews: <%=@user.reviews.count%></h3>
                    <ol>
                        <% @reviews.each do |review| %>
                            <li><a href="/stores/<%=review.store.id%>"><%=review.store.name%></a>: <%=review.title%></li>
                        <% end %>
                    </ol>
                </div>
            </section>
        <% end %>
    </article>
</main>