<main>
    <article>
        <form action='/stores' method="POST">
        <input type="hidden" name="user_id" value="<%=current_user.id%>">
            <div>   
                <label for="name">Name:</label>
                <input id="name" type="text" name="name" placeholder="Saigon Bistro">
            </div>

            <div>
                <label for="address">Address:</label>
                <input id="address" type="text" name="address" placeholder="600 S Yonge St # 16B, Ormond Beach, FL 32174">
            </div>

            <div>
                <label for="website">Website URL:</label>
                <input id="website" type="text" name="website" placeholder="http://www.saigon-bistro.com/">
            </div>

            <div>
                <label for="description">Store Description:</label>
                <input id="description" type="text" name="description" placeholder="Description" >
            </div>
            <input type="submit" value="Submit">
        </form>
    </article>
</main>